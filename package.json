{
  "name": "edge-baas-monorepo",
  "private": true,
  "packageManager": "pnpm@10.26.0",
  
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "link": "npm run link:core && npm run link:cli",
    "link:core": "cd packages/core && npm link",
    "link:cli": "cd packages/cli && npm link && npm link @edge-baas/core",
    "publish": "npm run build && npm publish --workspaces",
    "postinstall": "pnpm -w -r run build"
  },
  "devDependencies": {
    "turbo": "^2.4.4",
    "typescript": "^5.6.0"
  }
}