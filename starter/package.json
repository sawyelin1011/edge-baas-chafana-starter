{
  "name": "@edge-baas/starter",
  "version": "0.1.0",
  "description": "Starter template for Edge-BaaS projects",
  "private": true,
  "scripts": {
    "dev": "wrangler dev src/index.ts --local",
    "deploy": "wrangler deploy",
    "start": "wrangler dev src/index.ts --local",
    "cf-typegen": "wrangler types",
    "build": "tsc --noEmit && echo 'Build successful'",
    "validate": "node node_modules/@edge-baas/cli/dist/index.js validate",
    "generate": "node node_modules/@edge-baas/cli/dist/index.js generate",
    "db:create": "wrangler d1 create edge-baas-db",
    "db:migrate": "node scripts/db-migrate.js",
    "db:migrate:prod": "node scripts/db-migrate.js --prod"
  },
  "dependencies": {
    "@scalar/hono-api-reference": "^0.5.149",
    "chanfana": "^2.6.3",
    "hono": "^4.6.20",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240815.0",
    "@edge-baas/cli": "workspace:*",
    "@types/node": "^22.13.0",
    "@types/service-worker-mock": "^2.0.4",
    "typescript": "^5.6.0",
    "wrangler": "^4.55.0"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "outputs": []
      }
    }
  }
}