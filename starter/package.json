{
  "name": "@edge-baas/starter",
  "version": "0.1.0",
  "description": "Starter template for Edge-BaaS projects",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "start": "wrangler dev",
    "cf-typegen": "wrangler types",
    "build": "mkdir -p build && echo \"starter placeholder\" > build/placeholder.txt",
    "validate": "edge-baas validate config/config.json",
    "generate": "edge-baas generate config/config.json",
    "db:migrate": "wrangler d1 execute your-db-name --file=./.output/migrations/*.sql",
    "db:seed": "wrangler d1 execute your-db-name --file=./.output/migrations/*_seed_*.sql"
  },
  "dependencies": {
    "@scalar/hono-api-reference": "^0.5.149",
    "chanfana": "^2.6.3",
    "hono": "^4.6.20",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.13.0",
    "@types/service-worker-mock": "^2.0.4",
    "typescript": "^5.6.0",
    "wrangler": "^4.55.0"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "outputs": []
      }
    }
  }
}